<div class='container mx-auto px-4'>
  <div class='grid grid-cols-12 gap-6'>
    {{#each blogs}}
      <article
        class='card card-blog rounded-lg col-span-3 border-solid border-2'
      >
        <div class='card-header border-b p-3'>
          <p class='text-xl font-semibold text-neutral-700'>{{title}}</p>
        </div>
        <div class='card-body p-3'>
          <p class='text-neutral-400'>
            <span>
              Public time:
            </span>
            <span>{{formatDate publicTime null}}</span></p>
          <img
            src='{{imageUrl}}'
            alt='{{title}}'
            style='width: 2100%; height: auto;'
            class='py-2'
          />
          <p class='text-neutral-600'>{{description}}</p>
        </div>
        <div class='card-footer p-3 border-top flex space-x-2 justify-between'>
          <div class='space-x-2 flex'>
            <button class='btn btn-primary'>View</button>
          </div>
          <div class='space-x-2 flex'>
            <button class='btn'>
              <i class='bx bx-cog'></i>
            </button>
          </div>
        </div>
      </article>
    {{/each}}
  </div>
</div>