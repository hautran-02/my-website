<div class='header'>
  <p class='is-4'>
    Public time:
    {{formatDate blog.createdAt ''}}, Update:
    {{formatDate blog.updatedAt 'DD/MM/YYYY'}}
  </p>
  <h4 class='title is-2 mt-2'>{{blog.title}}</h4>
  <h5 class='subtitle is-5 mt-1'>{{blog.description}}</h5>
</div>
<div id='editor-result' class='mt-6'></div>

<script
  id='blogContentScript'
  content-data='{{content}}'
  src='/js/blog/view.js'
></script>